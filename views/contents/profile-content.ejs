<div class="container">
    <div class="profile-card">
        <img class="profile-img" src="<%= user.photos %>" alt="Profile Image">
        <div class="profile-details">
            <h5>
                <%= resume.name %>
            </h5>
            <p><strong>Github:</strong> <a href="<%= user.profileUrl %>">
                    <%= user.username %>
                </a></p>
        </div>
    </div>
    <% if (typeof resume !=='undefined' && resume !==null) { %>
        <h3 class="section-title">Resume Information</h3>
        <div class="profile-section">
            <div class="upper">
                <div class="img">
                    <img style="
                  width: 160px;
                  height: 160px;
                  border-radius: 50%;
                  overflow: hidden;
                  display: block;
                  margin: 0 auto;
                  box-shadow: 0 0 0 5px black;
                  margin-bottom: 30px;
                  filter: brightness(110%) contrast(110%) blur(0.5px);
                  object-fit: cover;"
                  src="<%= resume.profileImage %>" alt="">
                </div>
                <div class="details">
                    <p><strong>Email:</strong>
                        <%= resume.email %>
                    </p>
                    <p><strong>Phone:</strong>
                        <%= resume.phone %>
                    </p>
                    <div class="profiles">
                        <p><a href="<%= resume.profiles.github %>">
                                <strong>Github</strong>
                            </a></p>
                        <p><a href="<%= resume.profiles.linkedin %>">
                                <strong>Linkedin</strong>
                            </a></p>
                        <p><a href="<%= resume.profiles.website %>">
                                <strong>Website</strong>
                            </a></p>
                    </div>
                    <p><strong>About:</strong>
                        <%= resume.about %>
                    </p>
                </div>
            </div>
            <section class="layout">
                <div class="grow1">
                    <h5 class="head">Education</h5>
                    <ul>
                        <% resume.education.forEach(edu=> { %>
                            <li>
                                <%= edu.degree %> from <%= edu.institution %>
                                        <br>
                                        (Year: <%= edu.year %>, Grade: <%= edu.grade %>)
                            </li>
                            <% }); %>
                    </ul>
                </div>
                <div class="grow1">
                    <h5 class="head">Experience</h5>
                    <ul>
                        <% resume.experience.forEach(exp=> { %>
                            <li>
                                <%= exp.position %> at <%= exp.employer %>
                                        <br>
                                        <%= exp.description %>
                            </li>
                            <% }); %>
                    </ul>
                </div>
                <div class="grow1">
                    <h5 class="head">Skills</h5>
                    <div class="skills">
                        <ul>
                            <% resume.skills.forEach((skill, index)=> { %>
                                <li>
                                    <%= skill %>
                                </li>
                                <% }); %>
                        </ul>
                    </div>
                </div>
                <div class="grow1">
                    <h5 class="head">Projects</h5>
                    <ul>
                        <% resume.projects.forEach(project=> { %>
                            <li><strong>
                                    <%= project.name %>
                                </strong>
                                <br>
                                <%= project.description %>
                            </li>
                            <% }); %>
                    </ul>
                </div>
            </section>
        </div>
        <button  style="margin-top: 20px; height: 40px" class="update-button" onclick="window.location.href='/update-details'">
            <svg class="svg-icon" fill="none" height="20" viewBox="0 0 20 20" width="20"
                xmlns="http://www.w3.org/2000/svg">
                <g stroke="#ff342b" stroke-linecap="round" stroke-width="1.5">
                    <path
                        d="m3.33337 10.8333c0 3.6819 2.98477 6.6667 6.66663 6.6667 3.682 0 6.6667-2.9848 6.6667-6.6667 0-3.68188-2.9847-6.66664-6.6667-6.66664-1.29938 0-2.51191.37174-3.5371 1.01468">
                    </path>
                    <path d="m7.69867 1.58163-1.44987 3.28435c-.18587.42104.00478.91303.42582 1.0989l3.28438 1.44986">
                    </path>
                </g>
            </svg>
            <span class="update-txt">Update Details</span>
        </button>
        <% } else { %>
            <strong>No resume available</strong>
            <% } %>
</div>